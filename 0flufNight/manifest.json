{
  "manifest_version": 3,
  "name": "0flufNight",
  "version": "1.1.0",
  "description": "Minimalist blue light and focus filter with scheduling. Flat structure, high performance.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}